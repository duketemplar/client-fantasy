{
  "src_folders": ["e2e-tests/tests"],
  "output_folder": "e2e-reports",
  "custom_commands_path": "",
  "custom_assertions_path": "",
  "page_objects_path": ["e2e-tests/page-objects"],
  "globals_path": "",

  "selenium": {
    "start_process": true,
    "server_path": "./e2e-tests/server/selenium-server-standalone-2.48.2.jar",
    "log_path": "e2e-tests/logs",
    "host": "localhost",
    "port": 4444,
    "cli_args": {
      "webdriver.chrome.driver": "",
      "webdriver.ie.driver": ""
    }
  },

  "test_settings" : {
    "default": {
      "launch_url": "http://localhost:9000",
      "selenium_port": 4444,
      "selenium_host": "localhost",
      "silent": true,
      "screenshots": {
        "enabled": true,
        "on_failure" : true,
        "on_error" : false,
        "path": "e2e-screenshots"
      },
      "desiredCapabilities": {
        "browserName": "firefox",
        "javascriptEnabled": true,
        "acceptSslCerts": true
      }
    }
  }
}
